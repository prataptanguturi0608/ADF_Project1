			{
				"name": "Get_Output_folder_Metadata",
				"type": "GetMetadata",
				"dependsOn": [
					{
						"activity": "Copy_Parquet_Blob_to_DataLake",
						"dependencyConditions": [
							"Succeeded"
						]
					}
				],
				"policy": {
					"timeout": "0.12:00:00",
					"retry": 0,
